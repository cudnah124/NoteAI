# ==============================================
# NoteAI Environment Configuration
# ==============================================
# Copy to .env and fill in your values
# NEVER commit .env to git!

# ==============================================
# Database (PostgreSQL) - Required
# ==============================================
DATABASE_URL=postgresql+asyncpg://noteai_user:noteai_password@postgres:5432/noteai_db

# ==============================================
# Redis - Required
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
# Security - Required
# ==============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# Naver Cloud Platform - Required
# ==============================================
# Get from: https://www.ncloud.com/
NAVER_API_KEY=your_naver_api_key
NAVER_API_SECRET=your_naver_api_secret
NAVER_APIGW_KEY=your_api_gateway_key

# ==============================================
# HyperCLOVA X (LLM) - Required
# ==============================================
HYPERCLOVA_API_KEY=your_hyperclova_api_key
HYPERCLOVA_API_URL=https://clovastudio.stream.ntruss.com/testapp/v1/chat-completions/HCX-003
HYPERCLOVA_MODEL=HCX-003

# ==============================================
# Clova Embedding - Required
# ==============================================
CLOVA_EMBEDDING_API_KEY=your_embedding_api_key
CLOVA_EMBEDDING_URL=https://clovastudio.stream.ntruss.com/v1/api-tools/embedding/v2
EMBEDDING_MODEL=clir-emb-dolphin

# ==============================================
# Vector Database (Qdrant) - Required
# ==============================================
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ==============================================
# Celery (Background Tasks) - Required
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==============================================
# Application Settings
# ==============================================
ENVIRONMENT=development
DEBUG=True
APP_NAME=NoteAI
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================
# Optional Services (if needed)
# ==============================================
# Speech to Text
CLOVA_SPEECH_INVOKE_URL=
CLOVA_SPEECH_SECRET=

# OCR
CLOVA_OCR_URL=
CLOVA_OCR_SECRET=

# Monitoring
SENTRY_DSN=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# AWS S3 Storage (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=ap-northeast-2
